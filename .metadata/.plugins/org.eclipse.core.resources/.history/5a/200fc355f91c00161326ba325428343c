import java.util.Scanner;

public class Problem15 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.println("Enter the number:");
		int num = sc.nextInt();
		int sum = 0;
		int iterator = 1;
		
		if(num>=1){
			do{
				sum+=iterator;
				iterator++;
			}while(iterator<=num);
		}
	}
}
